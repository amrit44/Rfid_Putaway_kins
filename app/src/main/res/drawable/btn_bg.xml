<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1D15EB" />
            <gradient android:angle="-90" android:startColor="#5B74DE" android:endColor="#123AA0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#09123C" />
            <solid android:color="#FF1672EC"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF1672EC" />
            <gradient android:angle="-90" android:startColor="#B0C1EF" android:endColor="#254BD3" />
        </shape>
    </item>
</selector>